<body>
    <%= flash[:success] %>
    <h1>ブログ記事一覧</h1>
        <% @blogs.each do |blogs| %>
                <%= link_to "#{blogs.title}",blog_path(:id => "#{blogs.id}") %><br>
        <% end %>
        <% if user_signed_in? %>
            <p>ログイン:<%= current_user.email %>様 </p>
            <%= link_to "新規記事登録", new_blog_path, class:"btn btn-primary" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"}, class:"btn btn-primary" %>
        <% else %>
            <%= link_to "ログイン", new_user_session_path, class:"btn btn-primary"%>
            <%= link_to "ユーザー登録", new_user_registration_path, class:"btn btn-primary"%>
        <% end %>
</body>
