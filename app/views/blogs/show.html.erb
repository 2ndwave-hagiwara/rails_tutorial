<head>
<style type="text/css">
.jumbotron { 
    background:url("<%= asset_path('Catalina Shoreline.jpg') %>") 
    center no-repeat; 
    background-size: cover;
}
header .container {
    margin-top: 13%;
}
.nav-link {
    color: #fff;
}
.nav-link:hover {
    color: rgba(255, 255, 255, 0.8);
}
.navbar-light .navbar-nav .nav-link {
    color: #888888;
}
.navbar-light .navbar-nav .nav-link:focus, .navbar-light .navbar-nav .nav-link:hover {
    color: rgba(136, 136, 136, 0.8);
}
.blog_title {
    text-align: center;
    font-size: 3rem;
    margin: 10px auto; 
    color: #fff;
}
</style>
</head>
<body>
    <%= flash[:success]%>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark" id="mainNav">
    <div class="container">
        <% if user_signed_in? %>
            <a class="navbar-brand" style="color: #fff">ログイン:<%= current_user.username %> </a>
            <div class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, data: {confirm: "ログアウトしますか？"}, class: "nav-link" %>
            </div>
        <% else %>
            <div class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
            </div>
            <div class="nav-item">
                <%= link_to "ユーザー登録", new_user_registration_path, class: "nav-link" %>
            </div>
        <% end %>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation" style="color: #fff;">
            メニュー
        </button>
        <% if user_signed_in? %>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <%= link_to "投稿記事一覧", blogs_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">記事検索</a>
                    </li>
                    <li class="nav-item">
                        <%= link_to "記事投稿", new_blog_path, class: "nav-link" %>
                    </li>
                </ul>
            </div>
        <% else %>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <%= link_to "投稿記事一覧", blogs_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link">記事検索</a>
                    </li>
                </ul>
            </div>
        <% end %>
    </div>
    </nav>
    <header class="jumbotron jumbotron-fluid">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h1 class="blog_title"> <%= @blog.title %> </h1>
                    <p style="text-align: center; color: #fff;">
                        <%= @blog.create_user %> が <%= @blog.created_at.strftime('%Y年%m月%d日') %>に投稿(最終更新日:<%= @blog.updated_at.strftime('%Y年%m月%d日') %>)
                    </p>
            </div>
        </div>
    </header>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <p style="font-size: 1.5rem;"><%= @blog.content %></p>
            </div>
        </div>
    </div>
    <% if user_signed_in? %>
        <% if "#{@blog.create_user}" == "#{current_user.username}" %>
            <%= link_to "編集",edit_blog_path %>
            <%= link_to "削除",blog_path ,method: :delete, data: {confirm: "この記事を削除しますか？"} %>
        <% end %>
    <% end %>
</body>